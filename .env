# Environment Configuration
APP_ENV=development
APP_SECRET=your-super-secret-app-key-change-this-in-production

# Database Configuration
POSTGRES_DB=mini_erp
POSTGRES_USER=erp_user
POSTGRES_PASSWORD=erp_password
POSTGRES_PORT=5432
DATABASE_URL="postgresql://erp_user:erp_password@database:5432/mini_erp?serverVersion=15&charset=utf8"

# Redis Configuration
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET_KEY=%env(random:64)%
JWT_PUBLIC_KEY=%env(random:64)%
JWT_PASSPHRASE=your-jwt-passphrase-change-this

# CORS Configuration
CORS_ALLOW_ORIGIN=^http://localhost:5173$

# Port Configuration
BACKEND_PORT=8000
FRONTEND_PORT=5173
NGINX_PORT=80
NGINX_SSL_PORT=443

# Development Tools Ports
MAILHOG_SMTP_PORT=1025
MAILHOG_WEB_PORT=8025
ADMINER_PORT=8080

# Frontend Environment Variables
VITE_API_BASE_URL=http://localhost:8000
VITE_APP_NAME=Mini ERP
VITE_APP_VERSION=1.0.0

# Email Configuration (for production)
MAILER_DSN=smtp://localhost:1025

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880

# Cache Configuration
CACHE_POOL=cache.app.redis

# Logging Configuration
LOG_LEVEL=debug
